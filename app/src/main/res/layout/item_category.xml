<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimens_8dp"
    android:layout_marginVertical="@dimen/dimens_8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dimens_8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />

        <TextView
            android:id="@+id/tvItemTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_16dp"
            android:fontFamily="@font/montserrat_alternates_semi_bold"
            android:text="@string/text_burgers"
            android:textAllCaps="true"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/dimens_text_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/text_item_description"
            android:textColor="@color/color_description_item_666666"
            android:textSize="@dimen/dimens_text_12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
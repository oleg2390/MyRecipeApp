<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dimens_text_14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="Button.StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/Text.StyleTitle14</item>
        <item name="cornerRadius">@dimen/dimens_8dp</item>
    </style>

    <style name="Text.StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">@dimen/dimens_16dp</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
    </style>

    <style name="Text.StyleItemTittle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimens_8dp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
    </style>

    <style name="Text.StyleItemDescription" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">@dimen/dimens_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimens_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_8dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>